@model Book
@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="text-start">
        <h2 class="display-4">@Model.Title</h2>
        <h3 class="text-black">@Model.Author</h3>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h4 class="text-black">@string.Format("{0:C2}", Model.Price)</h4>
        </div>
        <div class="col-md-6">
            <h4 class="text-black"><b>Описание: </b></h4>
            <p class="text-black text-break">@Model.Description</p>
        </div>
    </div>
</div>

